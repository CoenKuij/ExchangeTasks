<Window x:Class="ExchangeTasks.Credentials"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credentials" Height="190" Width="287">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="28" />
            <RowDefinition Height="28" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Content="Email:" Grid.Column="0" Height="28" HorizontalAlignment="Right"  Name="label1" VerticalAlignment="Center" />
        <TextBox Grid.Column="1" Height="23" HorizontalAlignment="Left"  Name="textBox1" VerticalAlignment="Center" Width="120" />
        <Label Content="Password:" Grid.Column="0" Grid.Row="1" Height="28" HorizontalAlignment="Right"  Name="label2" VerticalAlignment="Center" />
        <TextBox Grid.Column="1" Grid.Row="1"  Height="23" HorizontalAlignment="Left"  Name="textBox2" VerticalAlignment="Center" Width="120" />
        <Button Content="Login" Grid.Column="1" Grid.Row="2" Height="23" HorizontalAlignment="Left" Name="button1" VerticalAlignment="Center" Width="75" IsDefault="True" Click="button1_Click" />
    </Grid>
</Window>
